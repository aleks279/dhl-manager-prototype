.navbar#navbar-background
  .navbar-header#header-navbar
    = link_to root_path, class: 'navbar-brand navbar-logo' do
      = image_tag 'logo.png'
  #navbar.navbar-collapse.collapse
    .pull-left
      %ul.nav.navbar-nav
        %li
        %li
        %li
        %li
    .pull-right
      %ul.nav.navbar-nav
        %li.spacing-top
        %li.user-menu
          %a.dropdown-toggle{ href: "#", data: { toggle: "dropdown" }, role: "button", aria: { haspopup: "true", expanded: "false" }}
            .user-avatar
              = image_tag "person-placeholder.png"
            %span.caret
          %ul.dropdown-menu
            %li
              - if driver_signed_in?
                = link_to "Log out", destroy_driver_session_path, method: :delete
              - else
                = link_to "Sign up", new_driver_registration_path
                = link_to "Sign in", new_driver_session_path
.subnavbar
  .col-md-12
    .title
