= render partial: 'partials/cover_board_truck', locals: { resource: @truck }

.row
  .col-md-6.col-md-offset-3.lightgrey
    %hr
    %h3 Truck information:
    %h4.bottom_margin
      Year:
    %p.bottom_margin
      #{ @truck.year }
    %h4.bottom_margin
      Model:
    %p.bottom_margin
      #{ @truck.model }
    %h4.bottom_margin
      Weight capacity:
    %p.bottom_margin
      #{ @truck.weight_capacity }
    %h4.bottom_margin

/ .row
/   .col-md-6.col-md-offset-3.lightgrey
/     %hr
/     %h3 Videos:
/     - @truck.youtube_links.in_groups_of(5).each do |link_group|
/       .spacing-top
/         - link_group.each do |link|
/           - if link
/             .col-sm-2.spacing-top
/               = link_to "#{image_tag get_youtube_thumbnail(link.url)}".html_safe, link.url

.row
  .col-md-6.col-md-offset-3.lightgrey
    %hr
    .col-md-offset-5
