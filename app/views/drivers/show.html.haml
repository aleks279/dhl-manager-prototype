
= render partial: 'partials/cover_board', locals: { resource: @driver }

.row
  .col-md-6.col-md-offset-3.lightgrey
    %hr
    %h3 Personal information:
    %h4.bottom_margin
      Email:
    %p.bottom_margin
      #{ @driver.email }
    %h4.bottom_margin
      Phone:
    %p.bottom_margin
      #{ @driver.phone }
    %h4.bottom_margin
      Address:
    %p.bottom_margin
      #{ @driver.address }

/ .row
/   .col-md-6.col-md-offset-3.lightgrey
/     %hr
/     %h3 Videos:
/     - @driver.youtube_links.in_groups_of(5).each do |link_group|
/       .spacing-top
/         - link_group.each do |link|
/           - if link
/             .col-sm-2.spacing-top
/               = link_to "#{image_tag get_youtube_thumbnail(link.url)}".html_safe, link.url

.row
  .col-md-6.col-md-offset-3.lightgrey
    %hr
    .col-md-offset-5

/ %nav
/   %ul.pager
/     - if current_user && current_user.email == @driver.user.email
/       %li
/         = link_to 'Editar', edit_driver_path(@driver)
